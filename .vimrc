" Turn on syntax highlighting
 syntax on

" Security
" set modlines=0

" Show line numbers
 set number

" Show file stats
 set ruler

" Encoding
 set encoding=utf-8

" Whitespace
 set wrap
 set textwidth=79
" set fomatoptions=tcqrn1
 set tabstop=2
 set shiftwidth=2
" set softtabstop=2
" set expandtab
" set noshiftround

" Cursor motion
" set scrolloff=3
" set backspace=indent, eol, start
" set matchpairs+=<:> " use % to jump between pairs
" runtime! marcos/matchit.vim

" Allow hidden buffers
" set hidden

" Searching
" nnoremap / /\v
" vnormap / /\v
 set hlsearch
 set incsearch
 set ignorecase
" set smartcase
 set showmatch
